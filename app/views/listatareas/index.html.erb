<p id="notice"><%= notice %></p>

<h1>Lista Tareas Pendientes</h1>

<style>
th { background-color: green; color: white;} 
</style>


<table border=1>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha_desde</th>
      <th>Fecha_hasta</th>
      <th>Responsable</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listatareas.each do |listatarea| %>
      <% if listatarea.estado == false %>
        <tr>
          <td><%= listatarea.nombre %></td>
          <td><%= listatarea.f_desde %></td>
          <td><%= listatarea.f_hasta %></td>
          <td><%= listatarea.responsable %></td>
          <td><%= listatarea.estado %></td>
          <td><%= link_to 'Ver', listatarea %></td>
          <td><%= link_to 'Editar', edit_listatarea_path(listatarea) %></td>
          <td><%= link_to 'Eliminar', listatarea, method: :delete, data: { confirm: 'Estas seguro de borrar?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

